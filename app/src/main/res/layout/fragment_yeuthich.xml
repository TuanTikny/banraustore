<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center"
    android:background="@drawable/bg_donhang"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:background="@drawable/bg_boderdot"
        android:layout_height="80dp">
        <TextView
            android:layout_marginTop="20dp"
            android:text="@string/frag_favoritesp_title"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="#24c400"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_marginTop="3dp"
            android:layout_width="280dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_height="2dp"
            android:background="@drawable/line2_lv"/>
        <ImageView
            android:layout_gravity="center"
            android:layout_marginTop="3dp"
            android:layout_width="200dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_height="2dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/line2_lv"/>
    </LinearLayout>
    <android.support.design.widget.CoordinatorLayout
        android:orientation="vertical"
        android:padding="5dp"
        android:background="@drawable/bg_cholistgiohang"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/lv_yeuthich"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical">
        </ListView>
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/fab_margin"
            android:src="@drawable/ic_giohang"/>
    </android.support.design.widget.CoordinatorLayout>

</LinearLayout>