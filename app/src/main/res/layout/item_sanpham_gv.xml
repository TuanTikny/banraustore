<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layout_sanpham"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:background="@drawable/bg_boderdot"
        android:gravity="center"
        android:padding="5dp">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="fill_parent"
                android:gravity="center"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/img_hinhsp"
                    android:src="@mipmap/ic_launcher_round"
                    android:layout_width="150dp"
                    android:padding="5dp"
                    android:layout_height="150dp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/img_xoayeuthich"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/img_themyeuthich"
                android:src="@drawable/removeicon"
                android:visibility="gone" />
            <ImageView
                android:id="@+id/img_themyeuthich"
                android:layout_marginRight="3dp"
                android:layout_marginTop="3dp"
                android:src="@drawable/ic_lovesp"
                android:layout_alignParentRight="true"
                android:layout_width="20dp"
                android:layout_height="20dp" />
        </RelativeLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="2dp"
            android:background="@drawable/line_sp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
            android:gravity="center"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="fill_parent"
                android:gravity="center"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_tensp"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal"
                    android:text="name"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="30dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="200dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_giasp"
                    android:gravity="center"
                    android:textSize="30sp"
                    android:text="50.000Đ"
                    android:textColor="#f96616"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp" />
                <TextView
                    android:id="@+id/tv_donvisp"
                    android:gravity="center_vertical"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:text="/Kg"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp" />
            </LinearLayout>
            <ru.katso.livebutton.LiveButton
                android:id="@+id/btn_chonmua"
                android:layout_marginTop="10dp"
                android:text="    Chọn mua"
                android:textSize="16sp"
                android:padding="10dp"
                android:textStyle="bold"
                android:textColor="#fdfdfd"
                app:backgroundColor="#ff9328"
                app:shadowColor="#FFCACACA"
                app:normalHeight="5dp"
                app:corners="35dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>